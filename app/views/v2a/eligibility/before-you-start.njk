{% extends "layouts/main.html" %}

{% block pageTitle %}
  Before you start – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
  text: "Back",
  href: "javascript:window.history.back()"
}) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <form class="form" action="/v2a/eligibility/start" method="post">

        <h1 class="govuk-heading-l">
          Apply for Funeral Expenses Payment
        </h1>

        <p class="govuk-body">
          It takes about 25 minutes to apply.
        </p>

        <p class="govuk-body">
          You cannot save your application and come back later. 
        </p>

        <p class="govuk-body">
          You'll need:
        </p>

          <ul class="govuk-list govuk-list--bullet">
            <li>your National Insurance number</li>

            {% if (data['relationshiptodeceased'] == "partner") %}
            <li>your partner’s National Insurance number</li>
            <li>the date your partner died </li>
            {% endif %}

            {% if (data['relationshiptodeceased'] == "childofdeceased") %}
            <li>your parent's National Insurance number</li>
            <li>the date your parent died</li>
            {% endif %}

            {% if (data['relationshiptodeceased'] == "parentofdeceased") %}
            <li>your child's National Insurance number (if they have one)</li>
            <li>the date your child died</li>
            {% endif %}

            {% if (data['relationshiptodeceased'] == "crofdeceased") %}
            <li>your relative or friend's National Insurance number</li>
            <li>the date your relative or friend died</li>
            {% endif %}

            {% if (data['relationshiptodeceased'] == "childofdeceased" or data['relationship-radio'] == "parentofdeceased") %}
            <li>details of any other surviving children or parents of the person who died</li>
            {% endif %}

            <li>details of the funeral</li>

            {% if (data['arrangingfuneral'] == "director") %}
            <li>name and address of funeral director</li>
            {% endif %}

            {% if (data['arrangingfuneral'] == "organisation") %}
            <li>name and address of the organisation or person from the community arranging the funeral</li>
            {% endif %}

            {% if (data['financialaffairs'] == "you") %}
            <li>details of the estate of the person who died </li>
            {% else %}
            <li>contact details of the person dealing with the financial affairs of the person who died</li>
            {% endif %}

            <li>your address and contact details</li>
            <li>your bank or building society details</li>
          </ul>

        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m govuk-!-padding-top-4">
          <h2 class="govuk-fieldset__heading">Do you have everything you need to apply?</h2>
        </legend>

        {{ govukRadios({
            name: "before-you-start",
            values: data["before-you-start"],

            items: [
              {
                value: "yes",
                text: "Yes"
              },
              {
                value: "no",
                text: "No"
              }
            ]
          }) }}

        {{ govukButton({
          text: "Continue"
        }) }}

      </form>
      
    </div>
  </div>

{% endblock %}
